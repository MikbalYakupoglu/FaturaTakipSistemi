@using Microsoft.AspNetCore.Mvc.TagHelpers
@model FaturaTakip.Models.UserForLoginDTO

<link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />

<body>
    <main class="form-signin">
        <div class="text-center" style="height: 100%; margin-top: 40px">
            <form asp-action="Login">
                <h1 class="h3 mb-3 fw-normal">Lütfen Giriş Yapın</h1>

                <div class="form-floating">
                    <input asp-for="GovermentId" class="form-control"/>
                    <label asp-for="GovermentId">T.C. Kimlik No</label>
                    <span asp-validation-for="GovermentId" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Password" type="password" class="form-control"/>
                    <label asp-for="Password">Şifre</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="checkbox mb-3">
                    @*                    <label>
                                <input type="checkbox" value="remember-me" formControlName="isActive"> Beni hatırla
                            </label>*@
                </div>
                <div class="form-floating">
                    <input type="submit" value="Create" class="btn btn-primary"/>
                </div>
            </form>
            @*<p style="margin-top: 20px;">Hesabınız Yok Mu ? <span routerLink="/register" style="color: blue;">Hesap Oluştur</span></p>*@
        </div>
        
        @if (ViewData["NotFound"] != "")
        {
            <p style="color: red">@ViewData["NotFound"]</p>
        }
        
        @if (ViewData["PasswordError"] != "")
        {
            <p style="color: red">@ViewData["PasswordError"]</p>
        }
    </main>
</body>
