@model FaturaTakip.Data.Models.RentedApartment

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>RentedApartment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="FKTenantId" class="control-label"></label>
                <select asp-for="FKTenantId" class ="form-control" asp-items="ViewBag.FKTenantId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FKApartmentId" class="control-label"></label>
                <select asp-for="FKApartmentId" class ="form-control" asp-items="ViewBag.FKApartmentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FKLandlordId" class="control-label"></label>
                <select asp-for="FKLandlordId" class ="form-control" asp-items="ViewBag.FKLandlordId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
