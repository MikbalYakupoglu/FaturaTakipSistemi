@model IEnumerable<FaturaTakip.ViewModels.MessageVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Body)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LandlordFullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenantFullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SenderName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                @if(item.Body.Length < 40)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.Body)
                    </td>
                }
                @if(item.Body.Length >=40)
                {
                    var shortBody = item.Body.Substring(0, 40);
                    <td>
                        @Html.DisplayFor(modelItem => shortBody)...
                    </td>
                }
                <td>
                    @Html.DisplayFor(modelItem => item.LandlordFullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenantFullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SenderName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
