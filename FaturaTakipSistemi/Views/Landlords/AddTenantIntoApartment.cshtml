@model FaturaTakip.Data.Models.RentedApartment

@{
    ViewData["Title"] = "Add Tenant";
}

<h1>@ViewData["Title"]</h1>

<hr />
@if(ViewData["Hata"] != null)
{
    <h3 style="color:red">@ViewData["Hata"]</h3>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddTenantIntoApartment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tenant.GovermentId" class="control-label"></label>
                <input asp-for="Tenant.GovermentId" class="form-control" />
                <span asp-validation-for="Tenant.GovermentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apartment" class="control-label"></label>
                <select asp-for="Apartment.Id" class="form-control" asp-items="ViewBag.ApartmentDetails"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListTenants">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
