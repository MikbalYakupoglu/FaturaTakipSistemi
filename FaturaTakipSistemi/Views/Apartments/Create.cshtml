@using Microsoft.AspNetCore.Mvc.TagHelpers
@model FaturaTakip.Data.Models.Apartment

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Apartment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Floor" class="control-label"></label>
                <input asp-for="Floor" class="form-control" />
                <span asp-validation-for="Floor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoorNumber" class="control-label"></label>
                <input asp-for="DoorNumber" class="form-control" />
                <span asp-validation-for="DoorNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control" asp-items="ViewBag.Types"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Block" class="control-label"></label>
                <select asp-for="Block" class="form-control" asp-items="ViewBag.Blocks"></select>
                <span asp-validation-for="Block" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FKLandlordId" class="control-label"></label>
                <select asp-for="FKLandlordId" class="form-control" asp-items="ViewBag.Landlords as SelectList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        @if (ViewData["Hata"] != null)
        {
            <p style="color: red">@ViewData["Hata"]</p>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
